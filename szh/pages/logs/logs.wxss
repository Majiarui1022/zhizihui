.my-home{
  width: 100%;
  height:100%;
  box-sizing: border-box;
  padding:13rpx 30rpx 6rpx 30rpx;
  background: #F8F8F8;
  display: flex;
  flex-direction: column;
}
.my-tit{
  width: 100%;
  height:306rpx;
  position: relative;
}
.bg-image{
  width: 100%;
  height:100%;
  position: absolute;
  left: 0;
  top:0;
  z-index: 10;
}
.my-head-new{
  padding:53rpx 0 31rpx 11rpx;
  box-sizing: border-box;
  width: 100%;
  height:100%;
  overflow: hidden;
  z-index: 88;
  position: absolute;
  display: flex;
  align-items: center;
}
.my-heade,.my-name-box{
  float: left
}
.my-heade{
  width: 150rpx;
  height:150rpx;
  border-radius: 50%;
  position: relative;
  margin-right: 36rpx;
}
.head{
  width: 100%;
  height:100%;
  position: absolute;
  border-radius: 50%;
}
.my-name{
  font-size:42rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  margin-right:13rpx;
}
.my-name-top .xiugai{
  width: 26rpx;
  height:26rpx;
  z-index: 88;
}
.my-name-top{
  margin-bottom: 40rpx;
}
.aixin{
  width: 34rpx;
  height:32rpx;
  margin-right: 10rpx;
}
.love-num{
  font-size:24rpx;
  color:rgba(255,60,83,1);
}

/* 历史捐助 */
.lishi-juan{
  width: 100%;
  flex: 1;
  margin-top:20rpx;
  background:rgba(255,255,255,1);
  box-shadow:4rpx 4rpx 4rpx 0rpx rgba(45,45,45,0.36);
  border-radius:8rpx;
  height: 100%;
  min-height:765rpx;
}
.lis-tit{
  width: 100%;
  height:55rpx;
  border-bottom:1rpx solid #F0F0F0;
}
.lis-tit text{
  line-height: 55rpx;
  padding-left: 27rpx;
  font-size:32rpx;
  color:rgba(68,68,68,1);
}
.list-menu{
  width: 100%;
  padding:28rpx 34rpx 22rpx 27rpx;
  box-sizing: border-box;
  border-bottom:1rpx solid #F0F0F0;
}
.mu-list{
  display: flex;
  justify-content: space-between;
}
.list-nume{
  max-width: 332rpx;
  white-space:pre-wrap;
  font-size: 24rpx;
}
.list-pri{
  font-size:36rpx;
  color:rgba(128,98,254,1);
}